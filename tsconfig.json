{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
